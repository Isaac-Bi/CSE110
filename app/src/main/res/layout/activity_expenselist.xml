<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.ExpensesListActivity">


    <include
        android:id="@+id/categoryBar"
        layout="@layout/expenselist_bar"
        app:layout_constraintBottom_toTopOf="@+id/activity_categories_list_history_expenses" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/layoutshadow"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/activity_categories_list_history_expenses"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categoryBar"
        app:layout_constraintVertical_bias="0.0" >


        <EditText
            android:id="@+id/expense_name"
            android:layout_width="196dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:paddingLeft="15sp"
            android:ems="10"
            android:hint="Name"
            android:textColor="@color/darkGrey"
            android:inputType="textPersonName"
            android:divider="@color/lightGrey"/>

        <EditText
            android:id="@+id/expense_cost"
            android:layout_width="142dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:ems="10"
            android:hint="Cost"
            android:textColor="@color/darkGrey"
            android:inputType="number|numberDecimal" />

        <Button
            android:id="@+id/AddToList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="@string/plus_sign"
            android:background="#00000000"
            android:gravity="center"
            android:textColor="@color/darkGrey"
            android:textSize="30sp" />

    </LinearLayout>

    <ListView
        android:id="@+id/history_expenses"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:cacheColorHint="#FFFFFF"
        android:divider="@drawable/layoutshadow"
        android:background="@color/lightGrey"
        android:dividerHeight="4dp"
        android:clickable="true"
        android:focusable="true"
        android:longClickable="true"
        android:smoothScrollbar="true" />

</LinearLayout>